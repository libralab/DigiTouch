package {	import br.com.stimuli.loading.BulkLoader;	import br.com.stimuli.loading.BulkProgressEvent;	import flash.events.*;	import flash.display.*;	import flash.xml.*;	import flash.text.Font;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.*;	import flash.events.MouseEvent;	import flash.net.*;	//klasa widoku sektora stadionu	public class ChairsButton extends SimpleButton	{		private var loader:BulkLoader;		private var url:String;		private var bgSrc:Bitmap;		private var bgSrcH:Bitmap;		private var mcOff:MovieClip;		private var mcOn:MovieClip;		public function ChairsButton(folder, src, srcH, urlVar)		{			url = urlVar;			mcOff = new MovieClip();			mcOn = new MovieClip();			loader = new BulkLoader(folder + src);			loader.add(folder + src, {id:"src"});			loader.add(folder + srcH, {id:"srcH"});			loader.get("src").addEventListener(Event.COMPLETE, onSrcLoaded);			loader.get("srcH").addEventListener(Event.COMPLETE, onSrcHLoaded);			loader.start();		}		private function onSrcLoaded(event:Event):void		{			var bgSrc = loader.getBitmap("src");			mcOff.addChild( bgSrc);			upState = mcOff;			overState = mcOn;			downState = upState;			hitTestState = upState;			this.addEventListener(MouseEvent.CLICK, click);		}		private function onSrcHLoaded(event:Event):void		{			var bgSrcH = loader.getBitmap("srcH");			mcOn.addChild( bgSrcH);		}		public function click(event:MouseEvent)		{			//trace(url);			navigateToURL(new URLRequest(url), "_blank");		}	}}